<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/question_music_layout"
    android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:id="@+id/question_list_element_add_text" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:layout_below="@+id/question_list_element_add_text"
        android:id="@+id/question_list_element_add_text_instruction" />
    <Button
        android:layout_below="@+id/question_list_element_add_text_instruction"
        android:id="@+id/question_list_element_add_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <ListView
            android:layout_below="@+id/question_list_element_add_button"
            android:id="@+id/question_list_element"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawSelectorOnTop="false"
            />

</RelativeLayout>