<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/background_custom">


    <TextView
        android:id="@+id/t_blevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbarXP"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/left_pic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#1d97dd"
        android:textStyle="bold"
        android:textSize="12dp"
        android:text="37"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressbarXP"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/left_pic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level Up !"
        android:visibility="invisible"
        android:textColor="#42f406"
        android:id="@+id/t_lvlup" />

    <ImageView
        android:id="@+id/left_pic"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/chouette"
        android:text="#ffffcc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <ProgressBar
        android:layout_width="160dp"
        android:layout_height="16dp"
        android:id="@+id/progressbarXP"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="50"
        android:max="100"
        android:secondaryProgress="100"
        android:layout_below="@+id/text_main_name"
        android:layout_toRightOf="@+id/t_blevel"
        android:layout_toEndOf="@+id/t_blevel" />

    <TextView
        android:id="@+id/text_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text="Jean Michel Dupond"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/progressbarXP"
        android:layout_alignStart="@+id/progressbarXP" />
</RelativeLayout>