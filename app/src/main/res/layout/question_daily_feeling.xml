<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/abc_action_bar_default_height_material"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:id="@+id/question_daily_feeling_how" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:layout_below="@+id/question_daily_feeling_how"
        android:id="@+id/question_daily_feeling_how_instruction" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        android:id="@+id/question_daily_feeling_array"
        android:layout_below="@+id/question_daily_feeling_how_instruction">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/question_daily_feeling_happiness_row"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_happiness" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_happiness_score" />
        </TableRow>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_daily_feeling_happiness_score_bar"
            android:layout_below="@+id/question_daily_feeling_happiness_row"
            android:clickable="false"
            android:longClickable="false"
            android:max="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/question_daily_feeling_sadness_row"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question_daily_feeling_happiness_score_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_sadness" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_sadness_score" />
        </TableRow>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_daily_feeling_sadness_score_bar"
            android:layout_below="@+id/question_daily_feeling_sadness_row"
            android:clickable="false"
            android:longClickable="false"
            android:max="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/question_daily_feeling_anger_row"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question_daily_feeling_sadness_score_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_anger" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_anger_score" />
        </TableRow>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_daily_feeling_anger_score_bar"
            android:layout_below="@+id/question_daily_feeling_anger_row"
            android:clickable="false"
            android:longClickable="false"
            android:max="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/question_daily_feeling_frustration_row"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question_daily_feeling_anger_score_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_frustration" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_frustration_score" />
        </TableRow>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_daily_feeling_frustration_score_bar"
            android:layout_below="@+id/question_daily_feeling_frustration_row"
            android:clickable="false"
            android:longClickable="false"
            android:max="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/question_daily_feeling_scariness_row"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question_daily_feeling_frustration_score_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_scariness" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:id="@+id/question_daily_feeling_scariness_score" />
        </TableRow>

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_daily_feeling_scariness_score_bar"
            android:layout_below="@+id/question_daily_feeling_scariness_row"
            android:clickable="false"
            android:longClickable="false"
            android:max="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </TableLayout>


</RelativeLayout>
